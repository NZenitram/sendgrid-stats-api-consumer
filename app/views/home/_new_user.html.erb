<div id="new_user_signin_modal">
  <div id="new-user-sign-up-form">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="new_user_email">
        <%= f.email_field :email, autofocus: true, placeholder: "Email Address" %>
      </div>

      <div class="new_user_password">
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "off", placeholder: "Password" %>
      </div>

      <div class="new_user_password_confirmation">
        <br />
        <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Password Confirmation" %>
      </div>

      <div class="actions">
        <br />
        <%= f.submit "Sign up", class: "sign-up-button" %>
      </div>
    <% end %>
  </div>
  <div id="user-links">
    <%= render "devise/shared/links" %>
  </div>
</div>
